---
const { name, role, image } = Astro.props;
---

<li>
  <div class="flex items-center gap-x-6">
    <img class="size-16 rounded-full" src={image} alt={`${name} headshot`} />
    <div>
      <h3 class="text-base/7 font-semibold tracking-tight text-gray-900">
        {name}
      </h3>
      <p class="text-sm/6 font-semibold text-indigo-600">
        {role}
      </p>
    </div>
  </div>
</li>
